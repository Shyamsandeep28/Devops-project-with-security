pipeline {
    agent any

    stages {
        stage('Checkout Code ') {
            steps {
                git branch: 'master', url: 'https://github.com/Shyamsandeep28/Devops-project-with-security.git'
            }
        }
        stage(' Trivy Scan - Source Code ') {
            steps {
              sh 'echo " scanning the code using trivy"' 
              sh 'trivy fs .'
                 }
        }
        stage('Build with Maven ') {
            steps {
                sh 'mvn clean package'
                
            }
        }
       
         stage('SonarQube Analysis') {
            steps {
                sh '''
                    mvn sonar:sonar \
                        -Dsonar.projectKey=DevopsProject \
                        -Dsonar.host.url=http://3.84.232.145:9000 \
                        -Dsonar.login= Token                
                '''
                # Note : to generate token .. goto sonar account sesstion --> security --> generate token --> give token name
            }
        }
        stage('build docker image  ') {
            steps {
               sh ' docker build -t applicationimage .'
        }
    }
    stage('Scan docker image  ') {
            steps {
               sh 'echo "Scanning Docker image with Trivy"'
               sh ' trivy image applicationimage'
        }
    }
     stage('depoy application ') {
            steps {
               sh 'docker run -d --name myapp-container -p 8081:8080 applicationimage'
            }
    }
}
}
